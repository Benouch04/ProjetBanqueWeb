{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}


{% block body %}
	<div id="layoutSidenav_content">
		<main>
			{% for message in app.flashes('danger') %}
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('error') %}
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			<div class="container-fluid px-4">
				<h1 class="mt-4">Dashboard du Conseiller</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item active">Dashboard</li>
				</ol>
				<div class="row">
					<div class="col-xl-6">
						<div class="card mb-4">
							<div class="card-header">
								<div class="d-flex justify-content-between align-items-center">
									<div class="d-flex align-items-center">
										<i class="fa-solid fa-user me-1"></i>
										<span>Clients</span>
									</div>
									<div class="d-flex">
										{{ form_start(search_form, {'attr': {'class': 'd-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0 search-container'}}) }}
										<div class="input-group">
											{{ form_widget(search_form.query, {'attr': {'class': 'form-control search-input', 'placeholder': 'Rechercher un client...'}}) }}
											<button class="btn btn-primary" type="submit" id="btnNavbarSearch">
												<i class="fas fa-search"></i>
											</button>
											{{ form_end(search_form) }}
										</div>
										<form action="{{ path('client_ajout') }}" method="post" class="ms-2">
											<button type="submit" class="btn btn-success">Créer</button>
										</form>
									</div>
								</div>
							</div>


							<table class="table">
								<thead>
									<tr class="text-center">
										<th>ID</th>
										<th>Nom du Client</th>
										<th></th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for client in clients %}
										<tr class="text-center">
											<td>{{ client.id }}</td>
											<td>{{ client.nomClient }}</td>
											<td></td>
											<td>
												<form action="{{ path('client_infos', {'id': client.id}) }}" method="post" style="display: inline;">
													<button type="submit" class="btn btn-info">Infos</button>
												</form>
												|
												<form action="{{ path('client_edit', {'id': client.id}) }}" method="post" style="display: inline;">
													<button type="submit" class="btn btn-warning">Modifier</button>
												</form>
												|
												<form action="{{ path('client_delete', {'id': client.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');" style="display: inline;">
													<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
													<button type="submit" class="btn btn-danger">Supprimer</button>
												</form>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="4">Aucun client trouvé.</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
							<nav aria-label="Page navigation">
								<ul
									class="pagination">
									{# Previous page link #}
									<li class="page-item {% if currentPage <= 1 %}disabled{% endif %}">
										<a class="page-link" href="{{ path('app_conseiller', {'page': currentPage - 1}) }}" aria-label="Previous">
											<span aria-hidden="true">&laquo;</span>
										</a>
									</li>

									{# Page numbers #}
									{% for i in 1..totalPages %}
										<li class="page-item {% if i == currentPage %}active{% endif %}">
											<a class="page-link" href="{{ path('app_conseiller', {'page': i}) }}">{{ i }}</a>
										</li>
									{% endfor %}

									{# Next page link #}
									<li class="page-item {% if currentPage >= totalPages %}disabled{% endif %}">
										<a class="page-link" href="{{ path('app_conseiller', {'page': currentPage + 1}) }}" aria-label="Next">
											<span aria-hidden="true">&raquo;</span>
										</a>
									</li>
								</ul>
							</nav>
						</div>
					</div>
					<div class="col-xl-6">
						<div class="card mb-4">
							<div class="card-header">
								<div class="d-flex justify-content-between align-items-center m-2">
									<div>
										<i class="fa-solid fa-table me-1"></i>
										Planning
									</div>
								</div>
							</div>
							<div class="card-body">
								<div class="card-body">
									<form action="{{ path('choix_conseiller_planning') }}" method="get">
										<label for="conseillerSelect">Conseiller :
										</label>
										<select name="id" id="conseillerSelect" class="form-select mr-8">
											{% for conseiller in conseillers %}
												<option value="{{ conseiller.id }}">{{ conseiller.firstname }}
													{{ conseiller.lastname }}</option>
											{% endfor %}
										</select>
										<div class="d-flex justify-content-center mt-3">
											<button type="submit" class="btn btn-primary">Rechercher</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>

				</div>
			</main>
		</div>
	{% endblock %}


	{% block footer %}
		<div class="py-4 bg-light mt-auto">
			<div class="container-fluid px-4">
				<div class="d-flex align-items-center justify-content-between small">
					<div class="text-muted">Copyright &copy; Your Website 2023</div>
					<div>
						<a href="#">Privacy Policy</a>
						&middot;
						<a href="#">Terms &amp; Conditions</a>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
