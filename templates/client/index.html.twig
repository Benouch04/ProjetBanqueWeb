{% extends 'base.html.twig' %}

{% block title %}Ajout d'un client
{% endblock %}

{% block body %}
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
	<div id="layoutSidenav_content" class="justify-content-center bg-light">
		<main>
			{% for message in app.flashes('danger') %}
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('error') %}
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			<div class="container-fluid px-4">
				<div class="row justify-content-center">
					<div class="col-xl-10">
						<div class="card mb-4">
							<div class="card-header bg-primary">
								<h3 class="text-center text-white font-weight-light my-4">Formulaire d'ajout d'un Client</h3>
							</div>
							<div class="card-body">
								{{ form_start(form)}}
								{{ form_row(form.nomClient) }}
								{{ form_row(form.prenomClient) }}
								{{ form_row(form.adresseClient) }}

								{{ form_row(form.numTel) }}
								{{ form_row(form.situation) }}
								<hr style="margin-top: 20px; margin-bottom: 20px;">
								{{ form_row(form.parent) }}
								{{ form_row(form.submit) }}
								{{ form_end(form)}}
							</div>
						</div>
					</div>
				</div>

			</div>
		</main>
	</div>
{% endblock %}
