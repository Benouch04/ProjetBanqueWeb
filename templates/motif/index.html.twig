{% extends 'base.html.twig' %}

{% block title %}Ajout d'un contrat
{% endblock %}

{% block body %}
	<div id="layoutSidenav_content" class="justify-content-center bg-light">
		<main>
			{% for message in app.flashes('danger') %}
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('error') %}
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			<div class="container-fluid px-4">
				<div class="row justify-content-center">
					<div class="col-xl-10">
						<div class="card mb-4">
							<div class="card-header bg-primary">
								<h3 class="text-center text-white font-weight-light my-4">Attribution des pièces justificatives à des comptes/contrats</h3>
							</div>
							<div class="card-body">
								<table class="table">
									<thead>
										<tr class="text-center">
											<th>ID</th>
											<th>Contrat / Compte</th>
											<th></th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>
										{% for motif in motifs %}
											<tr class="text-center">
												<td>{{ motif.id }}</td>
												<td>{{ motif.libelleMotif }}</td>
												<td></td>
												<td>
													<form action="{{ path('motif_edit', {'id': motif.id}) }}" method="post" style="display: inline;">
														<button type="submit" class="btn btn-warning">Voir</button>
													</form>
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="4">Aucun contrat ou compte.</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>

			</div>
		</main>
	</div>
{% endblock %}
