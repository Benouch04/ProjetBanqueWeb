{% extends 'base.html.twig' %}

{% block title %}Edit Calendar
{% endblock %}

{% block body %}
	<div id="layoutSidenav_content" class="justify-content-center bg-light">
		<main>
			<div class="container-fluid px-4">
				<div class="row justify-content-center">
					<div class="col-xl-12">
						<div class="card mb-4">
							<div class="card-header">
								<h3 class="text-center">Modifier le rendez vous</h3>
							</div>
							{{ form_start(form) }}
							{{ form_row(form.clientName) }}
							{{ form_row(form.conseillerName) }}
							{{ form_row(form.title) }}
							{{ form_row(form.start)}}
							{{ form_row(form.end)}}
							{{ form_row(form.all_day)}}
							{{ form_row(form.background_color)}}
							{{ form_row(form.submit)}}
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
