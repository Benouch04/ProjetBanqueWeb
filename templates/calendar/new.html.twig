{% extends 'base.html.twig' %}

{% block title %}New Calendar
{% endblock %}

{% block body %}
	<div id="layoutSidenav_content" class="justify-content-center bg-light">
		<main>
			{% for message in app.flashes('error') %}
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			<div class="container-fluid px-4">
				<div class="row justify-content-center">
					<div class="col-xl-8">
						<div class="card mb-4">
							<div class="card-header bg-primary">
								<a href="{{ path('client_infos', {'id': client.id}) }}" class="text-white" style="float: left; margin-right: 10px;">
									<i class="fas fa-arrow-left"></i>
									Retour
								</a>
								<h3 class="text-center text-white font-weight-light my-4">Cr√©ation d'un rendez vous</h3>
							</div>
							<div class="card-body">
								{{ form_start(form) }}
								{{ form_row(form.clientName) }}
								{{ form_row(form.conseillerName) }}
								<hr style="margin-top: 20px; margin-bottom: 1px;">
								{{ form_row(form.title) }}
								{{ form_row(form.motif) }}
								{{ form_row(form.start) }}
								{{ form_row(form.end) }}
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
