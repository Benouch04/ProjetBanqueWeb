{% extends 'base.html.twig' %}

{% block title %}Modification d'un compte
{% endblock %}

{% block body %}
	<div id="layoutSidenav_content" class="justify-content-center bg-light">
		<main>
			{% for message in app.flashes('danger') %}
				<div class="alert alert-danger" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			<div class="container-fluid px-4">
				<div class="row justify-content-center">
					<div class="col-xl-10">
						<div class="card mb-4">
							<div class="card-header bg-primary">
								<h3 class="text-center text-white font-weight-light my-4">Formulaire de Modification d'un compte</h3>
							</div>
							<div class="card-body">
								<form method="post">
									{{ form_start(form) }}
									{{ form_row(form.nomCompte) }}
									{{ form_row(form.submit) }}
									{{ form_end(form) }}
								</form>
							</div>
						</div>
					</div>
				</div>

			</div>
		</main>
	</div>
{% endblock %}
